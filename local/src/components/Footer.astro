<script>
    // Ждем загрузки DOM
    document.addEventListener('DOMContentLoaded', () => {
        const sphereContainer = document.querySelector('.sphere');
        const btn = document.querySelector('.sphere__btn');

        if (sphereContainer && btn) {
            btn.addEventListener('click', () => {
                createRipple(sphereContainer);
            });
        }

        function createRipple(container) {
            const ripple = document.createElement('span');
            ripple.classList.add('ripple-wave');

            // Добавляем волну в контейнер
            container.appendChild(ripple);

            // Удаляем элемент из DOM после завершения анимации (1.5 сек)
            // Время должно совпадать с animation-duration в CSS
            setTimeout(() => {
                ripple.remove();
            }, 1500);
        }
    });
</script>
